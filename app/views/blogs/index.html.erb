<h1>ブログ一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>

  <% @blogs.each do |blog| %>
   <tr>
   <td><%= blog.title %></td>
   <td><%= blog.content %></td>

   <td><%= link_to 'Check the details', blog_path(blog.id) %></td>
   <td><%= link_to 'Edit the blog', edit_blog_path(blog.id) %></td>
   <td><%= link_to 'Delete the blog', blog_path(blog.id), method: :delete %></td>
   </tr>

  <% end %>
</table>
 <br>

